<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LLV"
    tools:context=".DostarFragment1"
    android:background="@color/white">
    <LinearLayout
        style="@style/LLV">
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_dostar_tabu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:outlineSpotShadowColor="@color/active"
            app:cardElevation="6dp"
            android:outlineAmbientShadowColor="@color/active"
            android:layout_marginBottom="10dp">
        <LinearLayout
            style="@style/LL"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/window"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="@string/dostar_tabu"
                android:gravity="center"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_menin_dostarym"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:outlineSpotShadowColor="@color/active"
            app:cardElevation="6dp"
            android:outlineAmbientShadowColor="@color/active"
            android:layout_marginBottom="20dp">
        <LinearLayout
            style="@style/LL"
            android:gravity="center"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/friends"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="@string/menin_dostarym"
                android:gravity="center"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>