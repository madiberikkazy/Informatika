<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LL"
    tools:context=".DostarActivity"
    android:background="@color/active">
    <LinearLayout
        style="@style/LLV">
        <LinearLayout
            android:layout_weight="10"
            style="@style/LLV">
            <RelativeLayout
                android:layout_weight="2"
                style="@style/LL">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/user_m" />
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="1"
                style="@style/LLV">
                <TextView
                    android:id="@+id/aty_turatyn_jer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:text="Берікқазы Мәди"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/user_point"
                        style="@style/sattilik_and_upai"
                        android:layout_weight="1"
                        android:text="1286.6"
                        android:textSize="25dp"
                        android:gravity="right">
                    </TextView>
                    <TextView
                        style="@style/sattilik_and_upai"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/upai"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp">
                    </TextView>
                </LinearLayout>
                <RelativeLayout
                    style="@style/LL">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dostarmen_jarysu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="@color/active_dark"
                        android:elevation="10dp"
                        app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/game"
                                    android:layout_weight="2"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp" />
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/white"
                                    android:textSize="18dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/dostarmen_jarysu"/>
                            </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/LLV"
            android:layout_weight="8"
            android:background="@drawable/progress_rect">
            <LinearLayout
                style="@style/LL"
                android:layout_weight="11"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dostar_fragment"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_btn_dostar"
                    style="@style/LL"
                    android:layout_weight="1"
                    android:text="@string/dostar"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/dostar_fragment_btn"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/txt_btn_upailar"
                    style="@style/LL"
                    android:layout_weight="1"
                    android:text="@string/upailar"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                style="@style/LL"
                android:layout_marginBottom="50dp"
                android:layout_weight="2">

            </FrameLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_rect"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/LL">
            <TextView
                style="@style/LL"
                android:text="@string/dostar"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_highlight_off"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</RelativeLayout>