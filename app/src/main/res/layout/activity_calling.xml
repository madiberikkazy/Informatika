<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LLV"
    tools:context=".CallingActivity"
    android:background="@drawable/gradient">
    <LinearLayout
        android:gravity="top"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_logo_foreground"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dostarmen_jarysu"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/layout"
        android:layout_marginTop="20dp"
        android:src="@drawable/user_m" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_img"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/aty_jondi_oz"
        android:textColor="@color/white"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txt_oiunga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_light_light_light"
        android:textSize="18dp"
        android:text="@string/oiyynga_shaqyruda"
        android:layout_below="@+id/user_name"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_taqyryp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_oiunga"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/taqyryp"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/taqyryp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_taqyryp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="1000dp"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="50dp">
            <ImageView
                android:id="@+id/img_bas_tartu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/game"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="1000dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/green">
            <ImageView
                android:id="@+id/img_jauap_beru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/game"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>